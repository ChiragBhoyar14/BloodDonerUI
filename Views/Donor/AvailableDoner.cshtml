@model IEnumerable<BloodBank.Properties.SearchAvailableBloodDonerListDTO>

@{
    ViewData["Title"] = "AvailableDoner";
}

<h1>AvailableDoner</h1>

@{
    if(Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.DonarName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastDonationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonarName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastDonationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.DonerId }) |
                            @Html.ActionLink("Details", "Details", new { id=item.DonerId }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.DonerId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {


        if (ViewData["ValidationErrors"] != null)
        {
            <div class="alert alert-danger mt-3">
                <ul>
                    @foreach (var error in (List<string>)ViewData["ValidationErrors"])
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
            <div class="text-center mt-4">
                <!-- Button with a redirect to the Login page -->
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
            </div>
        }
        else
        {
            <h2>No Doner's Available</h2>
        }
    }
}

